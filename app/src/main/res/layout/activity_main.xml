<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cherubim.customimageview.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/roundimage"
        android:src="@mipmap/hehe" />

    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/hehe"
        app:riv_border_color="#333333"
        app:riv_border_width="1px"
        app:riv_corner_radius="8dip"
        app:riv_mutate_background="true"
        app:riv_oval="false"

        app:riv_tile_mode="repeat" />

    <com.example.cherubim.customimageview.RoundImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/hehe"
        app:riv_borderColor="#8c9eff"
        app:riv_borderWidth="2dp"
        app:riv_leftBottomRadius="15dp"
        app:riv_rightTopRadius="15dp" />
</LinearLayout>
